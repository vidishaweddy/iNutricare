<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Meals Menu"
        android:id="@+id/textView20"
        android:textAlignment="center"
        android:textSize="22pt"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textColorHighlight="#000"
        android:typeface="sans"
        android:paddingTop="15dp"
        android:singleLine="false"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/imageButton7"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="NewsFeed"
            android:src="@drawable/ic_view_white_48px"
            android:background="@drawable/selector"
            android:clickable="true"
            android:padding="5dp"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/imageButton8"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="NewsFeed"
            android:src="@drawable/ic_add_white_48px"
            android:background="@drawable/selector"
            android:clickable="true"
            android:padding="5dp"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/imageButton9"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="NewsFeed"
            android:src="@drawable/ic_update_white_48px"
            android:background="@drawable/selector"
            android:clickable="true"
            android:padding="5dp"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:id="@+id/imageButton11"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="NewsFeed"
            android:src="@drawable/ic_remove_white_48px"
            android:background="@drawable/selector"
            android:clickable="true"
            android:padding="5dp"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="View Meals"
            android:id="@+id/textView12"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="22dp"
            android:textColor="#fff"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Meal"
            android:id="@+id/textView13"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="37dp"
            android:textColor="#fff"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Update Meal"
            android:id="@+id/textView18"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="17dp"
            android:textColor="#fff"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Remove Meal"
            android:id="@+id/textView19"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="17dp"
            android:textColor="#fff"
            android:textSize="24dp" />
    </GridLayout>
</LinearLayout>